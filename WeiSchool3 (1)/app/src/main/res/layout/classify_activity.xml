        <!--android:background="@color/primary_darker"-->
        <!--android:text="Button" />-->

</LinearLayout>

</LinearLayout>




<!--menu-->
<com.mxn.soul.flowingdrawer_core.FlowingMenuLayout
    android:id="@+id/menulayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.administrator.weischool.view.XCRoundImageView
            android:id="@+id/roundImageView"
            android:layout_marginTop="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="36dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/head"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_myupload"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_rectangle2"
            android:padding="8dp"
            android:text="上传物品"
            android:textColor="@color/primary"
            android:textColorHighlight="@color/primary_darker"
            android:textSize="22sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_mybusiness"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_rectangle2"
            android:padding="8dp"
            android:text="我的交易"
            android:textColor="@color/primary"
            android:textColorHighlight="@color/primary_darker"
            android:textSize="22sp" />

<!--
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_settings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_rectangle2"
            android:padding="8dp"
            android:text="用户设置"
            android:textColor="@color/primary"
            android:textColorHighlight="@color/primary_darker"
            android:textSize="22sp" />
-->

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_map"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_rectangle2"
            android:padding="8dp"
            android:text="我的位置"
            android:textColor="@color/primary"
            android:textColorHighlight="@color/primary_darker"
            android:textSize="22sp" />

    </LinearLayout>




</com.mxn.soul.flowingdrawer_core.FlowingMenuLayout>

