            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="物品名称"
            android:textSize="20sp"
            android:textColor="#000"
            />


    </LinearLayout>
    <LinearLayout
